# WiFi Firewall Environment Configuration
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# Database Configuration (Optional - works without it)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_key_here

# Privacy Settings
PRIVACY_MODE=strict              # strict, enhanced, basic, off
ANONYMIZE_IPS=true               # Anonymize IP addresses in logs
HASH_DOMAINS=true                # Hash domain names for privacy
DATA_RETENTION_DAYS=1            # Days to keep logs (1-90)
AUTO_CLEANUP=true                # Auto-delete old data
NO_TELEMETRY=true               # Disable all telemetry
LOCAL_ONLY=true                 # No external connections

# Security Settings
ENCRYPTION_KEY=                  # Auto-generated if not set (32 chars)
SECURE_MODE=true                 # Enable all security features
ADMIN_PASSWORD=                  # Optional admin panel password

# Network Settings
DNS_PORT=53
API_PORT=3001
FRONTEND_PORT=5173

# Advanced Privacy
DISABLE_LOGGING=false            # Completely disable logging
MEMORY_ONLY=false               # Don't persist any data to disk
PARANOID_MODE=false             # Maximum privacy (may affect functionality)