# Privacy Configuration for WiFi Firewall
# Copy this file to .env and update with your preferences

# Privacy Mode Options: off, basic, enhanced, strict
PRIVACY_MODE=enhanced

# Encryption key for sensitive data (32 characters)
# Generate new key: openssl rand -hex 16
ENCRYPTION_KEY=changethisto32charactersecretkey

# Data retention days (override default based on privacy mode)
# DATA_RETENTION_DAYS=7

# Enable anonymous statistics (no personal data)
ANONYMOUS_STATS=true

# Auto-delete old logs
AUTO_CLEANUP=true

# Maximum log entries to keep in memory
MAX_LOG_ENTRIES=500

# Anonymize IP addresses in logs
ANONYMIZE_IPS=true

# Hash domain names in strict mode
HASH_DOMAINS=false

# Disable telemetry completely
NO_TELEMETRY=true

# Local-only mode (no external connections)
LOCAL_ONLY=true